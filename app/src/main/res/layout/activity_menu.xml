<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/water_bg2"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context="com.example.yang.saving_water.MenuActivity">

    <ImageButton
        android:layout_width="@dimen/main_button_width"
        android:layout_height="@dimen/main_button_height"
        android:background="@drawable/water_myhome"
        android:orientation="horizontal"
        android:id="@+id/home"
        android:layout_marginTop="120dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>


    <ImageButton
        android:layout_width="@dimen/main_button_width"
        android:layout_height="@dimen/main_button_height"
        android:background="@drawable/water_control"
        android:orientation="horizontal"
        android:id="@+id/water_control"
        android:layout_alignTop="@+id/home"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="@dimen/main_button_width"
        android:layout_height="@dimen/main_button_height"
        android:background="@drawable/water_news"
        android:orientation="horizontal"
        android:id="@+id/news"
        android:layout_marginTop="50dip"
        android:layout_below="@+id/home"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/GroupTalk"
        android:layout_marginTop="50dip"
        android:layout_width="@dimen/main_button_width"
        android:layout_height="@dimen/main_button_height"
        android:background="@drawable/water_talk"
        android:layout_below="@+id/water_control"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/map"
        android:layout_width="@dimen/main_button_width"
        android:layout_height="@dimen/main_button_height"
        android:background="@drawable/water_use"
        android:layout_alignTop="@+id/home"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>
