<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:background="@drawable/sw_status">

            <TextView
                android:layout_width="100dip"
                android:layout_height="30dip"
                android:text="장치 번호:"
                android:textColor="#FFFFFFFF"
                android:textStyle="bold"
                android:textSize="20dip"
                android:id="@+id/textview2"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="100dip"
                android:layout_height="30dip"
                android:text="1"
                android:textColor="#FFFFFFFF"
                android:textStyle="bold"
                android:textSize="20dip"
                android:id="@+id/textview3"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textview2" />


            <TextView
                android:layout_width="100dip"
                android:layout_height="30dip"
                android:text="물 저장량:"
                android:textColor="#FFFFFFFF"
                android:textStyle="bold"
                android:textSize="20dip"
                android:id="@+id/textView"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/imageView" />
            <ImageView
                android:layout_width="70dip"
                android:layout_height="80dip"
                android:background="@drawable/charge2"
                android:id="@+id/imageView"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/ONOFF"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:background="@drawable/button_off"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/ON"
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:background="@drawable/sw_status"
            android:text="On"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:layout_alignTop="@+id/OFF"
            android:layout_alignStart="@+id/ONOFF" />

        <Button
            android:id="@+id/OFF"
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:layout_marginBottom="69dp"
            android:background="@drawable/sw_status"
            android:text="Off"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/ON" />
    </RelativeLayout>
</RelativeLayout>